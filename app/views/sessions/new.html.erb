<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<h2>Login</h2>

<%= form_with url: session_path do |form| %>
  <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your username", value: params[:username] %><br>
  <%= form.submit "Login" %>
<% end %>
<br>
